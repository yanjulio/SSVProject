<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inpu_layout_code_supprimer_verification"
        android:layout_below="@+id/entete_supprimer_verification"
        android:layout_above="@+id/linear_bouton_supprimer_verification"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_code_supprimer_verification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/kp_supprimer_verificaiton"
            android:textColor="@color/textColorPrimary"
            android:textAppearance="?textAppearanceBody2"/>

    </com.google.android.material.textfield.TextInputLayout>

    <RelativeLayout
        android:id="@+id/linear_bouton_supprimer_verification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_quitter_supprimer_verification"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quitter"
        android:layout_toLeftOf="@id/btn_supprimer_verification"
        android:layout_toStartOf="@+id/btn_supprimer_verification"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_supprimer_verification"
        android:layout_marginLeft="10dp"
        style="@style/Widget.Kp.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Supprimer"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>
    </RelativeLayout>

</LinearLayout>
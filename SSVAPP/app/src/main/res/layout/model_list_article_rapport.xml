<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <LinearLayout
            android:id="@+id/linear_article_model_rapport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_article_model_designation_rapport"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Ligne"
                android:textAppearance="?textAppearanceBody2"
                android:textColor="@color/textColorPrimary"
                android:paddingLeft="5dp"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/textView_article_model_qte_rapport"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:paddingLeft="5dp"
                android:layout_height="match_parent"
                android:textColor="@color/textColorPrimary"
                android:text="Qte"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/textView_article_model_pu_rapport"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:textColor="@color/textColorPrimary"
                android:text="Pu"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/textView_article_model_total_rapport"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:paddingLeft="5dp"
                android:layout_height="match_parent"
                android:textColor="@color/textColorPrimary"
                android:text="total"
                android:textSize="16sp"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>